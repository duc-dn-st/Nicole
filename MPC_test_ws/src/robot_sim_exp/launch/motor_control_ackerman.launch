<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find robot_sim_exp)/config/steering_and_wheel_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/musashi_robot" args="
    joint_state_controller
    back_left_wheel_velocity_controller
    back_right_wheel_velocity_controller
    front_left_wheel_velocity_controller
    front_right_wheel_velocity_controller
    front_left_wheel_shaft_position_controller
    front_right_wheel_shaft_position_controller" />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="joint_states" to="musashi_robot/joint_states" />
  </node>

</launch>
